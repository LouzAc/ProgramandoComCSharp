<Window x:Class="Fintech.Correntista.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fintech.Correntista.Wpf"
        mc:Ignorable="d"
        Title="Fintech Correntista" WindowState="Maximized" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Clientes">
        <TabControl TabStripPlacement="Left">
            <TabItem Header="Pesquisa"></TabItem>
            <TabItem Header="Cadastro">
               <StackPanel>
                  <DockPanel>
                      <Label Content="CPF:" HorizontalContentAlignment="Right" Width="120"/>
                            <TextBox x:Name="cpfTextBox" Height="24" VerticalContentAlignment="Center" TextWrapping="NoWrap"/>
                        </DockPanel>         
               </StackPanel>
            </TabItem>
        </TabControl>
        </TabItem>
        <TabItem Header="Contas"></TabItem>
        <TabItem Header="Operações"></TabItem>
    </TabControl>
</Window>
